<div class="container">  
    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default" id="orderPanel">
                <div class="panel-heading" id="order">
                 <strong><p>Choose the one you like to place order!</p></strong>   
                </div>
                <div class="panel-body">

                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}

                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><i class="fa fa-check" aria-hidden="true"></i></span></button>
                        <hr>
                        {{/unless}}
                        {{/each}}
                    </ul>

                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="panel panel-default" id="delPanel">
                <div class="panel-heading" id="pickup"><strong><p>Remove burger when delivered!</p></strong>  
                </div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><span class="fa fa-trash"></span></button>
                        <hr>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>

    </div>

    <div class="jumbotron">
        <h1>Add Your Burger</h1>
        <br>
        <panel>
            <form class="create-form">
                <div class="form-group">
                    <label class="forBurger" for="newburger">Put burger name here!</label>
                    <input type="text" id="newburger" name="burger">
                    <button type="submit" class="btn btn-primary" id="addburger">
                        <i class="fa fa-paper-plane-o" aria-hidden="true"></i>
                    </button>
                </div>
            </form>
        </panel>
    </div>
</div>